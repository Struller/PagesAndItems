<?xml version="1.0" encoding="UTF-8"?>
<extension version="1.5" type="fieldtype" method="upgrade">
	<name>Radio (Pages and Items fieldtype)</name>
	<author>Carsten Engel</author>
	<creationDate>December 2010</creationDate>
	<copyright>(Copyright (C) 2009 Engelweb. All rights reserved.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>-</authorEmail>
	<authorUrl>www.pages-and-items.com</authorUrl>
	<version>integrated</version>
	<description>
		fieldtype Radio (Pages and Items)
	</description>
	<files>
		<filename fieldtype="radio">radio.php</filename>
		<filename >index.html</filename>
		<filename>validation_radio_not_empty.js</filename>
	</files>
	<params>
		<param name="values" type="textarea" rows="5" cols="20" default="" label="COM_PAGESANDITEMS_VALUES" description="COM_PAGESANDITEMS_VALUES_TIP"></param>
		<param name="labels" type="textarea" rows="5" cols="20" default="" label="COM_PAGESANDITEMS_LABELS" description="COM_PAGESANDITEMS_LABELS_TIP"></param>
		<param name="default_value" type="text" default="" label="COM_PAGESANDITEMS_DEFAULT_VALUE" description="COM_PAGESANDITEMS_DEFAULT_VALUE_CHECKBOX_INFO"></param>
		<param name="validation" type="radio" default="0" label="COM_PAGESANDITEMS_VALIDATION">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
	</params>

	<config>
		<fields name="params">
			<fieldset name="basic" >
				<field name="values" type="textarea" rows="5" cols="20" default="" label="COM_PAGESANDITEMS_VALUES" description="COM_PAGESANDITEMS_VALUES_TIP">
				</field>
				<field name="labels" type="textarea" rows="5" cols="20" default="" label="COM_PAGESANDITEMS_LABELS" description="COM_PAGESANDITEMS_LABELS_TIP">
				</field>
				<field name="default_value" type="text" default="" label="COM_PAGESANDITEMS_DEFAULT_VALUE" description="COM_PAGESANDITEMS_DEFAULT_VALUE_CHECKBOX_INFO">
				</field>
				<field name="validation" type="radio" default="0" label="COM_PAGESANDITEMS_VALIDATION">
			<option value="0">No</option>
			<option value="1">Yes</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>